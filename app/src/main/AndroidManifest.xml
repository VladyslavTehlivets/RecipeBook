<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.tehlivets.myapplication">

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-feature android:name="android.hardware.camera" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Start"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.START" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Show_recipes"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".Cook"
            android:screenOrientation="portrait" />
        <activity
            android:name=".RemoveRecipe"
            android:screenOrientation="portrait" />
        <activity
            android:name=".NewRecipe"
            android:configChanges="orientation|screenLayout|keyboardHidden|keyboard|screenSize"
            android:screenOrientation="portrait" />
        <activity
            android:name=".DeleteProduct"
            android:screenOrientation="portrait" />
        <activity
            android:name=".AddProduct"
            android:screenOrientation="portrait" />
    </application>

</manifest>